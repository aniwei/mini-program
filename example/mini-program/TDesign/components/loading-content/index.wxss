.loading-content {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  position: relative;
}
.loading-content.absolute {
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
}
.loading-content.fixed {
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
}
.loading-content .loading {
  width: 100%;
  height: 100%;
  visibility: visible;
}
