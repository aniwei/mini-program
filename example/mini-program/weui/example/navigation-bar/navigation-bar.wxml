<page-meta root-font-size="system"/>
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
    <view class="page__hd">
        <view class="page__title">Navigation Bar</view>
        <view class="page__desc">导航栏，模拟小程序原生顶部导航栏。</view>
    </view>
    <view class="page__bd">
      <view class="weui-navigation-bar">
        <view class="weui-navigation-bar__placeholder" style="visibility: hidden;"></view>
        <view class="weui-navigation-bar__inner">

          <view class='weui-navigation-bar__left'>
              <view class="weui-navigation-bar__buttons">
                <view aria-role="button" aria-label="返回" bindtap="back" class="weui-navigation-bar__button weui-navigation-bar__btn_goback weui-wa-hotarea"></view>
              </view>
          </view>

          <view class='weui-navigation-bar__center'>
            <view aria-role="alert" class="weui-navigation-bar__loading">
              <view aria-role="img" aria-label="正在加载" class="weui-loading"></view>
            </view>
            <text>标题</text>
          </view>

          <view class='weui-navigation-bar__right'>
          </view>
        </view>
      </view>
    </view>
</view>
