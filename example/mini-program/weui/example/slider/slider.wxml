<page-meta root-font-size="system"/>
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
	<view class="page__hd">
		<view class="page__title">Slider</view>
		<view class="page__desc">滑块</view>
	</view>
	<view class="page__bd page__bd_spacing">
		<view class="weui-slider">
			<view class="weui-slider__inner">
				<view style="width: 0;" class="weui-slider__track"></view>
				<view aria-label="不可调滑块" style="left: 0;" class="weui-slider__handler weui-wa-hotarea" aria-role="slider"></view>
			</view>
		</view>
		
		<view class="weui-slider-box">
			<view class="weui-slider">
				<view id="sliderInner" class="weui-slider__inner">
					<view id="sliderTrack" style="width: 50%;" class="weui-slider__track"></view>
					<view aria-label="可调滑块" id="sliderHandler" style="left: 50%;" class="weui-slider__handler weui-wa-hotarea" aria-role="slider"></view>
				</view>
			</view>
			<view id="sliderValue" class="weui-slider-box__value" aria-role="alert">50</view>
		</view>
	</view>
</view>
