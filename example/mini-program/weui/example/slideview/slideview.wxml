<page-meta root-font-size="system"/>
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
    <view class="page__hd">
        <view class="page__title">slideview</view>
        <view class="page__desc">左滑操作</view>
    </view>
    <view class="page__bd">
        <view class="weui-cells__title">右滑 文字按钮</view>
        <view class="weui-cells weui-cells_after-title btn_slideview_demo">
          <view class="weui-slideview">
            <view aria-role="option" class="weui-slideview__left">
                <view class="weui-cell">
                    <view class="weui-cell__bd">标题文字</view>
                    <view class="weui-cell__ft">说明文字</view>
                </view>
            </view>
            <view class="weui-slideview__right">
              <view class="weui-slideview__buttons">
                <view aria-role="button" class="weui-slideview__btn__wrp weui-slideview__btn-group_default slideview_btn_1">
                  <view class="weui-slideview__btn">普通</view>
                </view>
                <view aria-role="button" class="weui-slideview__btn__wrp weui-slideview__btn-group_default slideview_btn_2">
                  <view class="weui-slideview__btn">普通</view>
                </view>
                <view aria-role="button" class="weui-slideview__btn__wrp weui-slideview__btn-group_warn slideview_btn_3">
                  <view class="weui-slideview__btn">警示</view>
                </view>
              </view>
            </view>
          </view>
        </view>


        <view class="weui-cells__title">右滑 图标按钮</view>
        <view class="weui-slidecells">
          <view class="weui-slideview weui-slideview_icon icon_slideview_demo">
            <view aria-role="option" class="weui-slideview__left">
                <view class="weui-slidecell">
                  <view class="weui-slidecell__tips">
                    提示文字
                  </view>
                </view>
            </view>
            <view class="weui-slideview__right">
              <view class="weui-slideview__buttons">
                <view aria-role="button" class="weui-slideview__btn__wrp slideview_btn_1">
                  <view class="weui-slideview__btn">
                    <image aria-label="喜欢" class="weui-slideview__btn__icon" src="../images/icon_love.svg"></image>
                  </view>
                </view>
                <view aria-role="button" class="weui-slideview__btn__wrp  slideview_btn_2">
                  <view class="weui-slideview__btn">
                    <image aria-label="星标" class="weui-slideview__btn__icon" src="../images/icon_star.svg"></image>
                  </view>
                </view>
                <view aria-role="button" class="weui-slideview__btn__wrp  slideview_btn_3">
                  <view class="weui-slideview__btn">
                    <image aria-label="删除" class="weui-slideview__btn__icon" src="../images/icon_del.svg"></image>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
    </view>
</view>
