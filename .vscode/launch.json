  "version": "0.2.0",
  "configurations": [{
      "name": "@catalyzed/cli",
      "program": "${workspaceRoot}/packages/cli/dist/cli.js",
      "request": "launch",
      "cwd": "${workspaceFolder}/example/mini-program/weui",
      "env": {
        "PORT": 4001,
        "DEBUG": "wx:*"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["start", "--watch"],
      "type": "pwa-node",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}