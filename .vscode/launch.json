  "version": "0.2.0",
  "configurations": [
    {
      "name": "@catalyzed/server",
      "program": "${workspaceRoot}/packages/server/src/index",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "env": {
        "PORT": 3000,
        "DEBUG": "wx:*"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register",
        
      ],
      "type": "pwa-node",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }, {
      "name": "@catalyzed/compile",
      "program": "${workspaceRoot}/packages/compile/example/compile",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/compile",
      "env": {
        "PORT": 3000,
        "DEBUG": "*"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["start"],
      "type": "pwa-node",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }, {
      "name": "@catalyzed/cli",
      "program": "${workspaceRoot}/packages/cli/lib/cli",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/cli/examples/weui",
      "env": {
        "PORT": 4001,
        "DEBUG": "wx:*"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["start", "--watch"],
      "type": "pwa-node",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }, {
      "name": "@catalyzed/example",
      "program": "${workspaceRoot}/packages/cli/src/cli",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/cli/macau-mini-app",
      "env": {
        "PORT": 4001,
        "DEBUG": "wx:*"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register",
      ],
      "args": ["start"],
      "type": "pwa-node",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}