{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "types": ["@types/jest", "node"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "composite": false,
    "incremental": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noEmit": false,
    "build": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist/"
  ]
}