<page-meta root-font-size="system"/>
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
    <view class="page__hd">
        <view class="page__title">Msg</view>
        <view class="page__desc">提示页</view>
    </view>
    <view class="page__bd">
        <view class="weui-btn-area">
            <view aria-role="button" class="weui-btn weui-btn_default" bindtap="openSuccess">成功提示页</view>
            <view aria-role="button" class="weui-btn weui-btn_default" bindtap="openFail">失败提示页</view>
            <view aria-role="button" class="weui-btn weui-btn_default" bindtap="openText">无图标提示页</view>
            <view aria-role="button" class="weui-btn weui-btn_default" bindtap="openTextPrimary">无图标提示页</view>
            <view aria-role="button" class="weui-btn weui-btn_default" bindtap="openCustomAreaPreview">key-value列表场景</view>
            <view aria-role="button" class="weui-btn weui-btn_default" bindtap="openCustomAreaTips">提示列表场景</view>
            <view aria-role="button" class="weui-btn weui-btn_default" bindtap="openCustomAreaCell">跳转列表场景</view>
        </view>
    </view>
</view>
